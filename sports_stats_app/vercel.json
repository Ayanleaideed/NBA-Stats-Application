{
  "version": 2,
  "builds": [
    {
      "src": "sports_stats_app/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb" // Increase if your deployment is large
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "cache-control": "s-maxage=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "sports_stats_app/wsgi.py"
    }
  ]
}